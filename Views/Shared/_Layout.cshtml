    <style>
        .carousel-inner > .item > img,
        .carousel-inner > .item > a > img {
            height: 100%;
            width: 100%;
            
        }
    </style>


    <!-- jQuery -->
    <script src="js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Script to Activate the Carousel -->
    <script>
        $(document).ready(function () {
            $('.carousel').carousel({
                interval: 3000 //changes the speed
            });
        });
        
    </script>
</head>

<body style="background-color:black">

    <!--For Navigation Bar-->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-header">
            <a class="navbar-brand" href="~/Home/Index">Movie Cinema</a>
        </div>
        <div>
            <!--For Navigation Bar Tabs-->
            <ul class="nav navbar-nav">
                <li class=@ViewBag.Index> <a href="~/Home/Index">Home</a></li>
                <li class=@ViewBag.Categories> <a href="~/Home/Categories">Categories</a></li>
                @*<li class=@ViewBag.Tickets> <a href="~/Home/Tickets">Tickets</a></li>*@
                <li class=@ViewBag.AboutUs> <a href="~/Home/AboutUs">About</a></li>
                <li class=@ViewBag.ContactUs> <a href="~/Home/ContactUs">Contact Us</a></li>
                <li class=@ViewBag.AdminPanel> <a href="~/Home/Login">Admin Panel</a></li>
            </ul>


            <!--For Navigation Bar Search Option-->
            <form class="navbar-form navbar-left pull-right" action="~/Home/Search" method="post" role="search">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Search Movie" />
                    <input type="submit" class="btn btn-default" />
                </div>
            </form>
        </div>
    </nav>

    @RenderBody()

</body>
