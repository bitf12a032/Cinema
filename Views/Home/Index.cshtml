@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:100px">

    <!-- Full Page Image Background Carousel Header -->
    <div class="col-md-50">
        <div id="myCarousel" class="carousel slide center-block">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
                <li data-target="#myCarousel" data-slide-to="5"></li>
            </ol>
            <!-- Wrapper for Slides -->
            <div class="carousel-inner">
                <div class="item active">

                    <img src="~/Images/avengers1.jpeg" alt="Pic1" />
                    <div class="carousel-caption">
                        <h2>Avengers Age of Ultron</h2>
                    </div>
                </div>

                <div class="item">

                    <img src="~/Images/bombay.jpeg" alt="Pic2" />
                    <div class="carousel-caption">
                        <h2>Bombay Velvet</h2>
                    </div>
                </div>
                <div class="item">

                    <img src="~/Images/edgeOfTomorrow.jpeg" alt="Pic3" /> 
                    <div class="carousel-caption">
                        <h2>Edge of Tomorrow</h2>
                    </div>
                </div>
                <div class="item">

                    <img src="~/Images/fastAndFurious.jpeg" alt="Pic4" /> 
                    <div class="carousel-caption">
                        <h2>Fast and Furious 7</h2>
                    </div>
                </div>
                <div class="item">

                    <img src="~/Images/gabbarIsBack.jpeg" alt="Pic5" />
                    <div class="carousel-caption">
                        <h2>Gabbar is Back</h2>
                    </div>
                </div>
                <div class="item">

                    <img src="~/Images/ironMan3-1.jpeg" alt="Pic6" /> 
                    <div class="carousel-caption">
                        <h2>Iron Man 3</h2>
                    </div>
                </div>

            </div>

            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="icon-prev"></span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="icon-next"></span>
            </a>
        </div>

    </div>
</div>



<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="color:gray">Movie Cinema Site</h1>
            <p style="color:gray">Using this site you can see upcoming movies, register ticket for any movie</p>
        </div>
    </div>
    <hr>
    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p style="color:gray">Copyright &copy; Movie Cinema Website 2015</p>
            </div>
        </div>
        <!-- /.row -->
    </footer>
</div>
