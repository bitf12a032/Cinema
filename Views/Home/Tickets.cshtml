@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $('#btncheck').on('click', function () {
            var m = $('#movie').val();
            $.getJSON('/Home/GetMovieDetails?movie=' + m, function (d) {
                if (d != null) {
                    $('#cust').remove("form");
                    $('#cust').append(
                        "<form action=\"RegisterTickets\" method=\"post\">" +
                            "<table style=\"color:gray\">" +
                                "<tr>" +
                                    "<td>Customer Name :</td>" +
                                    "<td><input type=\"text\" name=\"name\" class=\"form-control\" /></td>" +
                                "</tr>" +
                                "<tr>" +
                                    "<td>Customer Address :</td>" +
                                    "<td><input type=\"text\" name=\"addr\" class=\"form-control\" /></td>" +
                                "</tr>" +
                                "<tr>" +
                                    "<td>Customer Phone No. :</td>" +
                                    "<td><input type=\"text\" name=\"phone\" class=\"form-control\" /></td>" +
                                "</tr>" +
                                "<tr>" +
                                    "<td></td>" +
                                    "<td><input type=\"submit\" class=\"btn-send\" value=\"Submit\" name=\"btnsubmit\" /></td>" +
                                    "<td><input type=\"hidden\" value=" + d.Id + "name=\"movieid\" /></td>" +
                                "</tr>" +
                            "</table>" +
                        "</form>"
                        );
                }
            })
        });
    });

</script>


